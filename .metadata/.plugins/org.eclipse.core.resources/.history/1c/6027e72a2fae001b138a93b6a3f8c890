package com.kajiH.practice0205;

public class Cast {

	public static void main(String[] args) {

		convertDoubleToInteger();

	}

	// practice 1
	private static void convertDoubleToInteger() {
		double myDouble = 1.9;
		int downToInt = (int) myDouble;
		float upToFloat = (float) downToInt;

		System.out.printf("ダウンキャスト double -> int\n%f -> %d\n\n", myDouble,
				downToInt);

		System.out.printf("アップキャスト int -> float\n%d -> %f", downToInt,
				upToFloat);
	}

}
